scss:
  .dates {
    font-size: 300%;
    color: DarkRed;
  }

  .month-name {
    font-weight: 700;
  }

  .container {
    max-width: 960px;
  }

  .toast {
    background: CadetBlue;
    color: #fff;
  }

  main {
    width: 66%;
    float: left;
    padding-right: 45px;
  }

  main p {
    font-size: 110%;
  }

  aside {
    width: 33%;
    float: right;
    font-size: 90%;
  }

  aside .card {
    margin-bottom: 1rem;
  }

  li .glyph {
    display: inline-block;
    width: 1.4rem;
  }

  li.list-group-item {
    padding-left: 0;
    padding-right: 0;
  }

javascript:
  var anchor = window.location.hash.substr(1);

  if (anchor === 'rsvp') {
    var rsvpModal = new bootstrap.Modal(document.getElementById('eventRsvpModal'));
    rsvpModal.show();
  }
