.relative(data-controller="geocoding" data-geocoding-api-token-value="#{ENV['GOOGLE_API_KEY']}")
  // location
  .md:border-b.py-2.md:py-4
    = f.styled_label :location, layout: :inline
    = f.text_field :location,
      class: "geocoded bg-white border border-stone-200 rounded p-2 w-full md:w-[75%] hover:ring-brand-500 placeholder-stone-300",
      autocomplete: "off",
      placeholder: t("events.placeholders.location"),
      data: { \
        geocoding_target: "query",
        action: "keyup->geocoding#performQuery",
        }

  // adddress
  .md:border-b.py-2.md:py-4
    = f.styled_label :address, layout: :inline
    = f.text_field :address,
      class: "geocoded bg-white border border-stone-200 rounded p-2 w-full md:w-[75%] hover:ring-brand-500 placeholder-stone-300",
      autocomplete: "off",
      placeholder: t("events.placeholders.address"),
      data: { \
        geocoding_target: "address",
        action: "keyup->geocoding#performQuery",
      }

  // departs from
  .py-2.py-2.md:py-4.relative
    = f.styled_label :departs_from, layout: :inline
    = f.text_field :departs_from,
      class: "geocoded bg-white border border-stone-200 rounded p-2 w-full md:w-[75%] hover:ring-brand-500 placeholder-stone-300",
      autocomplete: "off",
      placeholder: t("events.placeholders.departs_from")
