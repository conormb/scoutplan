<h1 style="margin-bottom:0; line-height:1.0;">
  <%= @unit.name %>
  Event Calendar
  <%= events_by_month&.keys&.first&.first %>&ndash;<%= events_by_month&.keys&.last&.first %>
  <% if params[:qualifier] == "draft" %>
    <%= " - DRAFT" %>
  <% end %>
</h1>
<p style="margin-bottom:1rem; font-weight:bold; color:#888;">As of <%= DateTime.now.in_time_zone(@unit.settings(:locale).time_zone).strftime('%d %B %Y') %></p>