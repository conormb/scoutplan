// these will eventually be moved to a stylesheet, but for now
// we want quick reloads

scss:
  .bulk-selection {
    display: none;
  }

  a.event-row {
    text-decoration: none;
    color: #333;
  }

  .start-day, .days, .title {
    width: 1%;
    white-space: nowrap;
  }

  .event-month-boundary {
    font-weight: 700;
  }

  tr.event-month-boundary {
    td {
      padding: 8px 12px;
    }
  }

  tr.event-row {
    display: table-row;
    transition: height 2s ease;
  
    td {
      a {
        display: inline-block;
        width: 100%;
        padding: 8px 12px;
      }
    }
  }

  td.event-dates {
    padding-left: 0;
  }

  .event-past, .event-cancelled, .event-future {
    display: none;
  }

  table.table row.event-past td {
    color: #aaa;
  }

  // initially, don't display past events
  tr.event-past {
    display: none;
  }

  .filter-status {
    display: none;
    margin-top: -12px;
  }

  body.showing-cancelled-events {
    .event-cancelled:not(.event-past) {
      display: table-row;
    }

    #show-cancelled-events-link {
      .menu-glyph-wrapper {
        display: inline-block;
      }
    }
  }

  body.showing-only-rsvp-events {
    .event-row:not(.event-rsvp) {
      display: none;
    }

    #show-only-rsvp-events-link {
      .menu-glyph-wrapper {
        display: inline-block;
      }
    }

    .filter-status-only-rsvps {
      display: block;
    }
  }

  // Draft events / bulk publish

  table-cell.bulk-selection {
    display: none;
  }

  #bulk_publish_button_wrapper {
    display: none;
  }

  body.showing-only-draft-events {
    .event-row {
      display: none;
    }

    .event-row.event-draft {
      display: table-row !important;
    }

    #show-only-draft-events-link {
      .menu-glyph-wrapper {
        display: inline-block;
      }
    }

    .table-cell.bulk-selection {
      display: table-cell;
    }

    .table.bulk-selection {
      display: table;
    }

    #bulk_publish_button_wrapper {
      display: inline-block;
    }

    #add_event_button_wrapper {
      display: none;
    }
  }

  body.showing-past-events.showing-cancelled-events {
    .event-past.event-cancelled {
      display: table-row;
    }
  }

  body.showing-past-events {
    .event-past:not(.event-cancelled) {
      display: table-row;
    }

    #show-past-events-link {
      .menu-glyph-wrapper {
        display: inline-block;
      }
    }
  }

  body.showing-future-events {
    .event-future {
      display: table-row;
    }

    #show-future-events-wrapper {
      display: none;
    }
  }

  .event-rsvp-link {
    z-index: 1000;
  }

  .table tr td.month {
    padding-top: 2rem;
    font-weight: bold;
  }

  tr.event {
    td.glyph {
      text-align: center;
    }
  }

  .action {
    text-align: right;
  }

  input[type="date"].error {
    background-color: #ffffcc;
    animation: shake 0.6s 0s;
  }

  .table.flush-top { 
    .table-row:first-child {
      .table-cell {
        padding-top: 0 !important;
      }
    }
  }

  .table.flush-left {
    .table-cell:first-child {
      padding-left: 0 !important;
    }
  }

  .table.flush-right {
    .table-cell:last-child {
      padding-right: 0 !important;
    }
  }

  .table.flush-table {
    .table-row-group {
      .table-row:first-child {
        .table-cell {
          padding-top: 0 !important;
        }
      }

      .table-cell:first-child {
        padding-left: 0 !important;
      }

      .table-cell:last-child {
        padding-right: 0 !important;
      }    
    }
  }

  a.row-link {
    color: #666;
  }

  .table {
    .table-row-group {
      .table-row {
        .table-cell {
          padding: 12px 8px !important;
        }

        &:hover {
          a.row-link {
            color: black !important;
          }
        }
      }
    }
  }

  .attention {
    animation: pulsate 2s ease-out 3;    
  }

  @-webkit-keyframes pulsate {
    0%   { box-shadow: 0 0 0 rgb(251, 191, 36); }
    50%  { box-shadow: 0 0 17px rgb(251, 191, 36); }
    100% { box-shadow: 0 0 0 rgb(251, 191, 36); }
  }

  .tab-label.selected {
    border-color: black;
    color: black;
    font-weight: 600;

    &:hover {
      color: black;
      cursor: default;
    }
  }

  .event-past {
    a.row-link {
      color: #aaa;
    }
  }