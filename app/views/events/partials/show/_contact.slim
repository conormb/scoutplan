- return unless @event.organizers.present?

section#organizer.py-4.border-t.border-stone-800
  h2.font-bold.uppercase.tracking-wide.text-stone-500.mb-6
    = t("events.show.organizer")

  dl
    - @event.organizers.each do |organizer|
      dt.font-bold.mt-6
        = organizer.full_display_name

      - if organizer.phone.present?
        dd.font-bold
          = number_to_phone(organizer.phone, area_code: true).gsub(/^\+\d/, '')

      - if organizer.email.present?
        dd.font-bold
          = mail_to organizer.email, organizer.email, class: "text-blue-600"