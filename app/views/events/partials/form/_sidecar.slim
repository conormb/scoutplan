    .h-full.bg-stone-200.border-stone-200(style="width:1px;")
  ul.font-bold.z-50.relative
    li
      = link_to "#basics", class: "active block py-2 z-30", data: { turbo: false } do
        .glyph.inline
          i.fas.fa-sm.fa-circle.mr-2
        = "Basic information"

    li
      = link_to "#rsvps", class: "block py-2", data: { turbo: false } do
        .glyph.inline
          i.fas.fa-sm.fa-circle.mr-2
        = "Gather responses"

    li
      = link_to "#dates", class: "block py-2", data: { turbo: false } do
        .glyph.inline
          i.fas.fa-sm.fa-circle.mr-2
        = "Date & time"

    li
      = link_to "#locations", class: "block py-2", data: { turbo: false } do
