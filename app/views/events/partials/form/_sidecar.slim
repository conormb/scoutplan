          i.fas.fa-sm.fa-circle.mr-2
        = "Cancel this event"

css:
  nav.sidecar .glyph svg {
    color: #e7e5e4;
  }

  nav.sidecar .active .glyph svg {
    color: #E66425;
  }

  form h3 {
    position: relative;
  }

  form h3 span {
    position: absolute;
    top: -3.2rem;
  }