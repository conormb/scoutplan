= f.fields_for :user do |u|

  .flex.flex-col.gap-4.pb-4
    div
      = u.label :first_name, class: "block mb-1 font-bold"
      = u.text_field :first_name,
                     class: "rounded border p-2 w-full placeholder-stone-400",
                     required: "",
                     autocomplete: "off",
                     placeholder: "First",
                     autofocus: true

    div
      = u.label :last_name, class: "block mb-1 font-bold"
      = u.text_field :last_name,
                     class: "rounded border p-2 w-full placeholder-stone-400",
                     required: "",
                     autocomplete: "off",
                     placeholder: "Last"
    
    div
      = u.label :nickname, class: "block mb-1 font-bold"
      = u.text_field :nickname,
                     class: "rounded border p-2 w-full placeholder-stone-400",
                     autocomplete: "off",
                     placeholder: "Nickname"

    div
      = u.label :email, class: "block mb-1 font-bold"
      = u.email_field :email,
                      class: "block w-full rounded p-2 placeholder-stone-400",
                      autocomplete: 'off',
                      placeholder: t("members.placeholders.email")

    div
      = u.label :phone, class: "block mb-1 font-bold"
      = u.phone_field :phone,
                      class: "block w-full rounded p-2 placeholder-stone-400",
                      autocomplete: "off",
                      placeholder: t("members.placeholders.phone")