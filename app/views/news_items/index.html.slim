- content_for :body_classes do
  = "news_items index #{@view}"

nav.bg-gray-100.h-screen.p-4.w-80#nav_side
  = render partial: 'nav'

main.flex-grow.p-8
  .max-w-3xl.mx-auto
    h4.mb-0.text-black = @view.titleize
    .text-sm.text-gray-400 = t('newsletter.next_sends_at', next_newsletter_datetime: @unit.settings(:communication).weekly_digest)

    #news_items_container.mt-11
      = render partial: 'news_items'

.modal#modal_wrapper

scss:
  article.news-item {
    &:hover {
      .news-item-actions {
        display: inline-block;
      }
    }

    .edit-mode {
      display: none;
    }
  }

  article.news-item.editing {
    .display-mode {
      display: none;
    }

    .edit-mode {
      display: inline-block;
    }
  }

javascript:
  document.querySelectorAll('.news-item-edit-toggler').forEach(function(elem) {
    elem.addEventListener('click', function(event) {
      var newsItemId = this.dataset.newsItemId;
      var elem = document.querySelector('#news_item_' + newsItemId);
      elem.classList.toggle('editing');
      event.preventDefault();
    })
  });