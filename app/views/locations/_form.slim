= form_with model: [unit, location],
  data: { turbo_action: "advance" } do |f|

  = render partial: "locations/form_fields", locals: { f: f }

  footer.py-4
    = f.submit location.new_record? ? "Add Location" : t("global.save_changes"),
      class: "text-white font-bold inline-block w-full md:w-fit px-4 py-3 md:py-2 bg-brand-500 hover:bg-brand-600 border-brand-500 hover:border-brand-600 border rounded cursor-pointer",
      id: "add_location_button"
