- content_for :body_classes do
  = "plans index"

h1 = t('planner.title')

.scroller.py-2
  .d-flex.flex-row.flex-nowrap(style="margin: 30px;")
    - @events.each do |event|
      .card.card-body.event-card(class="event-#{event.category.name.parameterize}")
        h1.card-title
          .month = event.starts_at.strftime('%b')
          = event.starts_at.strftime('%-d')
        h3 = event.title
        p = event.short_description

        div(id="event_#{event.id}_activities")
          = render partial: 'activities', locals: { event: event }

.modal#activity_modal_wrapper

scss:
  .add-activity-link {
    text-decoration: none;
    color: #666;
    border: none;
    background: none;
  }

  .card.event-card {
    background: #f6f6f6;
  }

  li.event-activity {
    border: 1px solid #e4e4e4;
    margin-bottom: 0.5rem;
    padding: 0.5rem 1rem 0.5rem 0.5rem;
    border-radius: 5px;
    font-size: 0.9rem;
    background: #fff;
    display: block;
    cursor: default;
    white-space: nowrap;

    .sort-grip {
      display: inline-block;
      width: 1.2rem;
      cursor: move;      
    }

    .activity-title {
      display: inline;
      overflow-x: hidden;
      white-space: nowrap;
    }

    h3 {
      margin-bottom: 1rem;      
    }

    .activity-action-link {
      display: none;
      color: #888;
    }

    &:hover {
      .activity-action-link {
        display: inline;
      }
    }
  }

  ul.event-activities {
    list-style-type: none;
    padding: 0;
  }
  
  .scroller {
    position: absolute;
    left: 0;
    right: 0;
    overflow-x: auto;

    .card {
      min-width: 18rem;
      min-height: 25rem;
      margin-right: 1rem;
    }

    .card-title .month {
      font-size: 1rem;
      text-transform: uppercase;
    }

    h1.card-title {
      font-size: 5rem;
    }

    .card.event-camping-trip {

    }

    .card.event-no-meeting {
      color: #aaa;
    }
  }

css:
  .card.event-troop-meeting h1 {
    color: #{ @unit.planner.event_category_for(:camping_trip)&.color || '#333' };
  }
