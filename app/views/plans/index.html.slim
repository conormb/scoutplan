- content_for :body_classes do
  = "plans index"

h1.mb-8.ml-8 = t('planner.title')
  
.flex.overflow-x-scroll
  .flex.flex-nowrap.p-6
    = render partial: 'event', collection: @events

javascript:
  function dismissDialog(selector) {
    var elem = document.querySelector(selector);
    elem.parentNode.removeChild(elem);
  }      

scss:
  main {
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

  .scroller {
    overflow-x: scroll;
    max-width: 100%;

    .card {
      min-width: 18rem;
      min-height: 25rem;
      margin-right: 1rem;
    }

    .card-title .month {
      font-size: 1rem;
      text-transform: uppercase;
    }

    h1.card-title {
      font-size: 5rem;
    }

    .card.event-camping-trip {

    }

    .card.event-no-meeting {
      color: #aaa;
    }
  }

  .add-activity-link {
    text-decoration: none;
    color: #666;
    border: none;
    background: none;
  }

  .card.event-card {
    background: #f6f6f6;
  }

  li.event-activity {
    border: 1px solid #e4e4e4;
    margin-bottom: 0.5rem;
    padding: 0.5rem 1rem 0.5rem 0.5rem;
    border-radius: 5px;
    font-size: 0.9rem;
    background: #fff;
    display: block;
    cursor: default;
    white-space: nowrap;

    .sort-grip {
      display: inline-block;
      width: 1.2rem;
      cursor: move;      
    }

    .activity-title {
      display: inline;
      overflow-x: hidden;
      white-space: nowrap;
    }

    h3 {
      margin-bottom: 1rem;      
    }

    .activity-action-link {
      display: none;
      color: #888;
    }

    &:hover {
      .activity-action-link {
        display: inline;
      }
    }
  }

  ul.event-activities {
    list-style-type: none;
    padding: 0;
  }

css:
  .card.event-troop-meeting h1 {
    color: #{ @unit.planner.event_category_for(:camping_trip)&.color || '#333' };
  }
