header.navbar.navbar-expand-md.bd-navbar
  nav.container.flex-wrap.flex-md-nowrap.navbar-dark
    = link_to unit_home_path(@current_unit, @current_unit.slug), class: 'navbar-brand' do
      i.fal.fa-home

    button.navbar-toggler(data-bs-toggle="collapse" data-bs-target="#main_navbar")
      span.navbar-toggler-icon

    #main_navbar.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          / = link_to 'Events',  unit_events_path(@current_unit), class: 'nav-link', id: 'nav_link_events'
          = link_to 'Events',  unit_home_path(unit_id: @current_unit.id, slug: @current_unit.slug), class: 'nav-link', id: 'nav_link_events'

        li.nav-item
          = link_to 'Members', unit_members_path(@current_unit), class: 'nav-link', id: 'nav_link_members' if policy(:unit_membership).index?

        li.nav-item
          = link_to 'Planner', unit_plans_path(@current_unit), class: 'nav-link', id: 'nav_link_plans' if policy(:event).plan?

        li.nav-item
          = link_to t('messaging.title'), unit_messages_path(@current_unit), class: 'nav-link', id: 'nav_link_messaging' if policy(:message).index?

      ul.navbar-nav.ml-auto
        li.nav-item
          .dropdown
            = link_to '#', class: 'nav-link dropdown-toggle', data: { 'bs-toggle' => 'dropdown' } do
              i.fas.fa-user-circle
              |&nbsp;
              = "Hello, #{ current_user.display_first_name }!"
            ul.dropdown-menu.dropdown-menu-end
              li = link_to "#{ @current_unit.name} Settings", edit_unit_settings_path(@current_unit), class: 'dropdown-item' if policy(:unit_settings).edit?
              li = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'dropdown-item'

scss:
  .navbar {
    background-color: #ac3a3e;
  }
