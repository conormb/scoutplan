doctype html
html
  head
    title = ((@page_title || []).reverse + [t("app_name")]).join(" Â· ")
    meta name="viewport" content="width=device-width,initial-scale=1"
    = csrf_meta_tags
    = csp_meta_tag
    = favicon_link_tag "favicon.ico"
    = stylesheet_link_tag "tailwind", "data-turbo-track": "reload"
    = stylesheet_link_tag 'application', 'data-turbo-track': 'reload'
    = stylesheet_link_tag "https://use.typekit.net/#{ENV['ADOBE_FONT_KIT_ID']}.css"
    = javascript_include_tag "https://kit.fontawesome.com/#{ ENV['FONT_AWESOME_KIT_ID'] }.js", crossorigin: "anonymous"
    = javascript_include_tag "main"
    = javascript_importmap_tags
    = yield :head

  body(class="text-gray-600 #{controller_name} #{action_name} #{yield :body_classes}")
    nav#top_nav.sticky.top-0.bg-white/95.z-10.hidden.lg:block
      = render partial: "layouts/nav"

    = render partial: "layouts/nav_mobile"
        
    main.h-screen.flex-grow.px-4.py-0
      = turbo_frame_tag "main"
        = yield

    footer
      /!  CI #{ENV["GITHUB_RUN_NUMBER"]}

    = render partial: "events/partials/styles"      

  javascript:
    function setElemDisplay(elem, show) {
      var elem = document.querySelector(elem);
      elem.style.display = show ? 'block' : 'none';
    }

    document.documentElement.addEventListener("turbo:load", function(event) {
      document.body.classList.remove("showing-mobile-menu");
    });

  scss:
    .submit-conjunction {
      display: inline;
      padding: 0 1rem;
    }

    nav.navbar {
      margin-bottom: 30px;
    }

    .navbar-dark .navbar-nav .nav-link {
      color: #fff;
    }

    @mixin active-nav-link {
      font-weight: 800;
      cursor: default;

      &:hover {
        color: #fff;
      }
    }

    h1 .subtitle {
      text-transform: uppercase;
      font-size: 50%;
      font-weight: 400;
      letter-spacing: 2px;
    }

    nav.unit-id {
      color: #888;
      text-transform: uppercase;
      font-size: 90%;
      letter-spacing: 1px;
      font-weight: 600;
    }

    h1 {
      font-weight: 400;
    }
