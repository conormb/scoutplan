<!DOCTYPE html>
<html>
  <head>
    <title>Scoutplan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/<%= ENV['FONT_AWESOME_KIT_ID'] %>.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.typekit.net/<%= ENV['ADOBE_FONT_KIT_ID'] %>.css">
  </head>

  <body>
    <% if flash[:notice] || flash[:alert] %>
      <div class="position-fixed top-0 end-0 p-3">
        <div class='toast' id='flashToast'>
          <div class='toast-header'>
            <strong class="me-auto"><%= t(:app_name) %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class='toast-body'>
            <%= notice %>
            <%= alert %>
          </div>
        </div>
      </div>

      <script>
        var toastDiv = document.getElementById('flashToast');
        var toast = new bootstrap.Toast(toastDiv);
        toast.show();
      </script>
    <% end %>

    <div class='container'>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
      <%= link_to 'Events', unit_events_path(@unit) %>
      <%= link_to 'Members', unit_members_path(@unit) if policy(:unit_memberships).index? %>
      <%= yield %>
    </div>
  </body>
</html>
